import java.sql.*;

public class FeedbackDB {

   
    public static void saveFeedback(String name, String email, String message) {
        String url = "jdbc:mysql://localhost:3306/feedback_db"; 
        String user = "root";     
        String password = "Rashid2024@";     

        String query = "INSERT INTO feedback (name, email, message) VALUES (?, ?, ?)";

        try {
            
            Class.forName("com.mysql.cj.jdbc.Driver");

            
            Connection conn = DriverManager.getConnection(url, user, password);

            
            PreparedStatement stmt = conn.prepareStatement(query);
            stmt.setString(1, name);
            stmt.setString(2, email);
            stmt.setString(3, message);

            
            stmt.executeUpdate();
            System.out.println("✅ Feedback saved successfully to MySQL!");

           
            stmt.close();
            conn.close();

        } catch (Exception e) {
            System.out.println("❌ Database error: " + e.getMessage());
        }
    }
}
